.admin
  =link_to "Works Index", "/admin"
  =link_to "Types", "/admin/types"
  =link_to "Domains", "/admin/domains"
  =link_to "Time Periods", "/admin/time_periods"
  %h1 Types
  =link_to "New Type", "/types/new"
  %table
    %tbody
      %tr
        %th
        %th Name
        %th Works
        %th
        %th
      -@types.each do |type|
        %tr
          %td= type.name
          %td= type.works.count
          %td= link_to "Edit", "/types/#{type.id}/edit"
          %td
            -if type.works.count > 0
              = "Cannot delete with works"
            -else
              = link_to 'Delete', tp, :method => :delete, :confirm => "Are you sure you want to delete this type?"